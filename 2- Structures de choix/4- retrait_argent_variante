public class retrait_argent_variante {

	public static void main(String[] args) {
		// Déclarations
		double s, r, ns;
		
		// Début
		System.out.print ("Donnez le solde");
		s = Lire.d();
		System.out.print ("Donnez le montant du retrait");
		r = Lire.d();
		
		ns = s-r;
		
		if ((s <= 0) || (ns <= 0)) {
			System.out.print ("Désolé nous ne pouvons donner suite à votre demande");
		} else {
			System.out.print ("Votre demande a été accepté, votre nouveau solde est de :" +ns +"€");
		}

	}

}
